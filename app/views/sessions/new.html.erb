<section class="auth container">
    <%= form_with(scope: :session, url: login_path, class: "auth__form") do |f| %>
        <div class="auth__field">
            <%= f.label :username, "Username", class: "auth__label" %>
            <%= f.text_field :username, class: "auth__input" %>
        </div>

        <div class="auth__field">
            <%= f.label :password, "Password", class: "auth__label" %>
            <%= f.text_field :password, class: "auth__input" %>
        </div>

        <div class="auth__field">
            <%= f.submit "Login" %>
        </div>

        <p class="auth__paragraph">
            Not registered? 
            <a class="auth__link" href="#">Create an account</a>
        </p>
    <% end %>
</section>